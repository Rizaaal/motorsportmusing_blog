---
import Base from "../layouts/Base.astro";
import MainSection from "../layouts/MainSection.astro";
const posts = await Astro.glob("../articles/*.md");
const images = posts.filter(post => post.frontmatter.image).map((post) => post.frontmatter.image);
import "../style.css";
---

<style>
  ul {
    display: grid;
    padding: 0;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 12px;
  }

  img {
    width: 100%;
  }

  dialog {
    color: white;
    background-color: black;
    border: none;
    width: 320px;
    padding: 4em 2em 2em 2em;
    /* overflow: hidden; */
  }

  dialog::backdrop {
    background-color: rgba(100, 100, 100, 0.95);
  }

  dialog h2 {
    font-size: 1.9em;
  }

  dialog h3 {
    font-size: .9em;
  }

  dialog h3, dialog h3 + p {
    margin: 0;
    color: #999;
  }

  .tags {
    font-size: .4em;
  }

  dialog h3 + p {
    font-style: italic;
  }

  dialog button {
    /* position: relative; */
    top: 60px;
    background-color: var(--secondary-color);
    padding: 1em;
    margin-top: 2em;
    border: none;
    font-size: 1em;
  }

  dialog button:nth-of-type(1) {
    margin-right: 23px;
  }

  dialog button > a {
    color: white;
    text-decoration: none;
  }

  dialog button#close {
    padding: revert;
    margin-top: revert;
    position: absolute;
    top: 15px;
    right: 32px;
    color: transparent;
    background-color: transparent;
    background-image: url('../../public/icons/close.png');
    background-size: cover;
    border: none;
    height: 29px;
    width: 29px;
  }

</style>

<Base>
  <MainSection title="Images from all posts">
    <dialog class="modal">
      <img src="" alt="image" />
      <h2>Title</h2>
      <p>
        <!-- fix this, it should contain two tags -->
        <!-- one that contains the date and one that contains tags -->
        <span class="tags">#tag</span>
      </p>
      <p id="description">description</p>
      <h3>License</h3>
      <!-- if license is not provided, show something else -->
      <p><small>license</small></p>
      <button><a href="#">Read article</a></button>
      <button><a href="#" target="_blank">View Image</a></button>
      <button id="close">close</button>
    </dialog>

    <ul>
      {
        images.map((image) => (
          <li>
            <img src={image.url} alt={image.alt} />
          </li>
        ))
      }
    </ul>
  </MainSection>
</Base>

<script>
  //@ts-nocheck
  import formatDate from "../utils/scripts/date.js";
  import { getPostURL } from "../utils/scripts/utils"
  const dialog = document.querySelector("dialog");
  const images = document.querySelectorAll("li > img");
  const closeButton = document.querySelector("dialog > button#close");
  const posts = Object.values(
    import.meta.glob("../articles/*.md", { eager: true }),
  ).filter(post => post.frontmatter.image);

  closeButton.addEventListener("click", () => dialog.close());

  function showGalleryModal(post) {
    dialog.children[0].src = post.frontmatter.image.url;
    dialog.children[1].innerText = post.frontmatter.title;
    dialog.children[2].innerHTML = `
      ${formatDate.USADate(new Date(post.frontmatter.pubDate))}
      ${post.frontmatter.tags.reduce((string, tag) => {
        return `${string} #${tag} `;
      }, "")}`;
    dialog.children[3].innerText = post.frontmatter.description;
    dialog.children[5].innerHTML = `
      <small>
        ${post.frontmatter.image.license || "Not provided"}
      </small>`;
    dialog.children[6].children[0].href = getPostURL(post);
    dialog.children[7].children[0].href = post.frontmatter.image.url;
    dialog.showModal();
  }

  images.forEach((image, i) =>
    image.addEventListener("click", () => showGalleryModal(posts[i])),
  );
</script>
