---
const {className, title, subtitle, ...rest} = Astro.props;
---
<style>
  main {
    padding: 1em 2em;
    min-height: calc(100svh - 72px);
    margin: 5em 0;
  }

  h1 { margin: .2em 0 1.5em 0; }

  h2 {
    color: var(--tertiary-color);
    font-size: 0.8rem;
    font-weight: normal;
    margin-top: -3em;
    margin-bottom: 3rem;
  }

  /* dynamic <main> styling fallback */
  .main-default { background-color: var(--post-color); }

  @media screen and (min-width: 768px) {
    main {
      padding: 1em 3em;
      margin : 3em;
    }
  }
</style>

<main class={className || 'main-default'} {...rest}>
  {title && <h1>{title}</h1>}
  {subtitle && <h2>{subtitle}</h2>}
  <slot />
</main>
