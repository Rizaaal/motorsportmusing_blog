---
import Search from "astro-pagefind/components/Search";
---
<style>
  section#search {
    position: fixed;
    top: 0;
    left: 150vw;
    display: flex;
    flex-direction: column;
    gap: 1em;
    height: 100svh;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.85);
    color: white;
    padding: 2em;
    overflow-y: auto;
    transition: left .3s;
  }

  button#close-search {
    align-self: end;
    background: transparent url("../../public/icons/close.png") no-repeat;
    color: transparent;
    overflow: hidden;
    border: none;
    min-height: 29px;
    width: 29px;
  }

  @media screen and (min-width: 768px) {
    section#search {
      display: none;
    }
  }
</style>

<style is:global>
  #desktop-search {
    display: none;
    grid-column: 2/4;
  }

  #search .pagefind-ui__drawer:not(.pagefind-ui__hidden){
    background-color: revert;
    color: white;
  }

  #search .pagefind-ui__result-link {
      color: white;
    }

  .pagefind-ui .pagefind-ui__drawer:not(.pagefind-ui__hidden) {
    position: absolute;
    left: 0;
    right: 0;
    margin-top: 0px;
    z-index: 9999;
    padding: 0 2em 1em;
    overflow-y: auto;
    box-shadow:
      0 10px 10px -5px rgba(0, 0, 0, 0.2),
      0 2px 2px 0 rgba(0, 0, 0, 0.1);
    border-bottom-right-radius: var(--pagefind-ui-border-radius);
    border-bottom-left-radius: var(--pagefind-ui-border-radius);
    background-color: var(--pagefind-ui-background);
  }

  @media screen and (min-width: 768px) {
    #desktop-search {
      display: block;
    }
  }
</style>

<!-- mobile search -->
<section id="search">
  <button id="close-search">Close</button>
  <Search id="search" className="pagefind-ui" uiOptions={{ showImages: false }} />
</section>

<!-- desktop search -->
<Search id="desktop-search" className="pagefind-ui" uiOptions={{ showImages: false }} />

<script>
  //@ts-nocheck
  const searchButton = document.querySelector("button#search");
  const closeButton = document.querySelector("button#close-search");
  const searchSection = document.querySelector("section#search");

  //open search
  searchButton.addEventListener("click", () => {
    searchSection.style.left = "0px";
  });

  //close search
  closeButton.addEventListener("click", () => {
    searchSection.style.left = "150vw";
  });
</script>
